<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/commandCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:padding="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/logocommand"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:scaleType="centerCrop"
            android:src="@drawable/aaa" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardResto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/restonamecommand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/semibold"
                android:text="@string/taj_mahal"
                android:textColor="#2A2C41"
                android:textSize="20sp"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/maps_photo"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/statut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/semibold"
                android:text="En cours"
                android:textColor="#FF0000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/restonamecommand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/restonamecommand"
                app:layout_constraintTop_toTopOf="@+id/restonamecommand"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textName2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/semibold"
                android:text="Total : "
                android:textColor="#2A2C41"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/maps_photo"
                app:layout_constraintTop_toBottomOf="@+id/commandhour"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/typecuisineinput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/semibold"
                android:text="Italian"
                android:textColor="#FF543E"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/typeFood"
                app:layout_constraintTop_toTopOf="@+id/typeFood" />

            <TextView
                android:id="@+id/commanddate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/semibold"
                android:text="11 juilet 2023"
                android:textColor="#FF543E"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/typeFood2"
                app:layout_constraintTop_toTopOf="@+id/typeFood2" />

            <TextView
                android:id="@+id/commandhour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/semibold"
                android:text="23:54"
                android:textColor="#FF543E"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/typeFood4"
                app:layout_constraintTop_toTopOf="@+id/typeFood4" />

            <TextView
                android:id="@+id/totalprixcommand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/semibold"
                android:text="2500DA"
                android:textColor="#FF543E"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/textName2"
                app:layout_constraintStart_toEndOf="@+id/textName2"
                app:layout_constraintTop_toTopOf="@+id/textName2" />

            <TextView
                android:id="@+id/typeFood"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/regular"
                android:text="@string/cuisine_type"
                android:textColor="#2A2C41"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/maps_photo"
                app:layout_constraintTop_toBottomOf="@+id/restonamecommand" />

            <TextView
                android:id="@+id/typeFood2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/regular"
                android:text="date : "
                android:textColor="#2A2C41"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/typeFood"
                app:layout_constraintTop_toBottomOf="@+id/typeFood" />

            <TextView
                android:id="@+id/typeFood4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/regular"
                android:text="heure :"
                android:textColor="#2A2C41"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/typeFood2"
                app:layout_constraintTop_toBottomOf="@+id/typeFood2" />

            <ImageView
                android:id="@+id/maps_photo"
                android:layout_width="111dp"
                android:layout_height="123dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/codebar" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>